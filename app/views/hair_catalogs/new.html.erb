<div class="container-fluid">
	<div class="row">
		<div class="back col-md-offset-1 col-sm-offset-1">
			<%= link_to :back do %>
				<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"><strong>Back</strong></span>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10">
			<div class="shadow">
				<%= form_with model:@haircatalog, url:hair_catalogs_path, remote: true do |h| %>
				<div class="haircatalog-image">
					<%= image_tag "no haircatalog.png", class: "img-prev", :size => '300x300' %>
                	<%= h.attachment_field :catalog_image, autofocus: true, autocomplete: "catalog_image", class: "img-choice" %>
				</div>
				<div class="tag-box">
					<%= h.label :タグ %><br />
					<%= h.collection_check_boxes :tag_ids, @tags, :id, :tag_name  do |tag| %>
                  	<span class="check"><%= tag.label {tag.check_box + tag.text} %></span>
                  	<% end %>
				</div>
				<div class="treatment-box">
					<%= h.label :施術内容 %><br />
					<%= h.text_area :treatment_contents, placeholder: '200字以内でお願いします', class: "text" %>
				</div>
				<div class="btn-box">
					<%= h.submit "投稿", class: "btn" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

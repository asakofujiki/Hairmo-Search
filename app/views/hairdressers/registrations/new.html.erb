<script src="https://ajaxzip3.github.io/ajaxzip3.js" charset="UTF-8"></script>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <div class="shadow">
        <div class="sign-up-title">
          <h3>美容師 新規登録</h3>
        </div>
        <div class="sign-up-box">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="sign-up-image" onclick="$('#hairdresser_hairdresser_image').click()">
              <div class="image-field">
                <%= image_tag "no images.png", class: "img-prev", :size => '150x150' %>
                <%= f.attachment_field :hairdresser_image, autofocus: true, autocomplete: "hairdresser_image", class: "img-choice" %>
              </div>
            </div>

            <div class="sign-up-field">
              <%= f.label :名前 %><br />
              <%= f.text_field :hairdresser_name, autofocus: true, autocomplete: "hairdresser_name", class: "field" %>
            </div>

            <div class="sign-up-field">
              <%= f.label :性別 %><br />
              <%= f.select :hairdresser_gender, Hairdresser.hairdresser_genders.keys.map {|k| [I18n.t("enums.hairdresser.hairdresser_gender.#{k}"), k]}, include_blank: '', autofocus: true, autocomplete: "hairdresser_gender", class: "sign-up-select" %>
            </div>

            <div class="sign-up-field">
              <%= f.label :サロン名 %><br />
              <%= f.text_field :salon_name, autofocus: true, autocomplete: "salon_name", class: "field" %>
            </div>

            <div class="sign-up-field">
              <%= f.label :サロン郵便番号（ハイフンなし） %><br />
              <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "postcode" %>
            </div>

            <div class="sign-up-field">
              <%= f.label :サロン住所 %><br />
              <%= f.text_field :salon_address, autofocus: true, autocomplete: "salon_name", class: "field" %>
            </div>

            <div class="sign-up-field">
              <%= f.label :サロンエリア %><br />
              <%= f.select :area, Hairdresser.areas.keys.map {|k| [I18n.t("enums.hairdresser.area.#{k}"), k]}, include_blank: '', autofocus: true, autocomplete: "area", class: "sign-up-select" %>
            </div>

            <div class="sign-up-field">
              <div><strong>募集モデル</strong></div>
              <div class="menu">
                <%= f.label :カット %><br />
                <%= f.collection_check_boxes :cut_type_ids, @cut_types, :id, :cut_name  do |cut| %>
                  <span class="check"><%= cut.label { cut.check_box + cut.text} %></span>
                <% end %>
              </div>
              <div class="menu">
                <%= f.label :カラー %><br />
                <%= f.collection_check_boxes :color_type_ids, @color_types, :id, :color_name  do |color| %>
                  <span class="check"><%= color.label { color.check_box + color.text} %></span>
                <% end %>
              </div>
              <div class="menu">
                <%= f.label :パーマ %><br />
                <%= f.collection_check_boxes :perm_type_ids, @perm_types, :id, :perm_name  do |perm| %>
                  <span class="check"><%= perm.label { perm.check_box + perm.text} %></span>
                <% end %>
              </div>
              <div class="menu">
                <%= f.label :セット %><br />
                <%= f.collection_check_boxes :set_type_ids, @set_types, :id, :set_name  do |set| %>
                  <span class="check"><%= set.label { set.check_box + set.text} %></span>
                <% end %>
              </div>
            </div>

            <div class="sign-up-field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "field" %>
            </div>

            <div class="sign-up-field">
              <%= f.label :パスワード（6文字以上） %>
              <!--
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %><br />
              -->
              <%= f.password_field :password, autocomplete: "new-password", class: "field" %>
            </div>

            <div class="sign-up-field">
              <%= f.label :パスワード（確認用） %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "field" %>
            </div>
          </div>

          <div class="sign-up-btn">
            <div class="actions">
              <%= f.submit "新規登録", class: "action-btn"%>
            </div>
          </div>
        <% end %>

        　<div class="signup">
           <%= render "hairdressers/shared/links" %>
         </div>
      </div>
    </div>
  </div>
</div>
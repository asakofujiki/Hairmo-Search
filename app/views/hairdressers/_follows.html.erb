<% @hairdresser.hairdresser_follows.each do |follow| %>
  <%= link_to model_path(follow.model.id) do %>
    <div class="col-md-6">
      <div class="model_index-box clearfix">
        <span><%= attachment_image_tag(follow.model, :hairmodel_image, fallback: 'no images.png', size: '150x150', class: "image-box") %></span>
        <div class="profile-box">
          <table class="profile-list">
            <tr>
              <td class="profile-item">名前</td>
              <td><%= follow.model.hairmodel_name %></td>
            </tr>
            <tr>
              <td class="profile-item">性別</td>
              <td><%= follow.model.hairmodel_gender_i18n %></td>
            </tr>
            <tr>
              <td class="profile-item">年代</td>
              <td><%= follow.model.age_i18n %></td>
            </tr>
            <tr>
              <td class="profile-item">髪の長さ</td>
              <td><%= follow.model.hair_length_i18n %></td>
            </tr>
            <tr>
              <td class="profile-item">黒染め履歴</td>
              <td><%= follow.model.black_history_i18n %></td>
            </tr>
            <tr>
              <td class="profile-item">ブリーチ履歴</td>
              <td><%= follow.model.bleach_history_i18n %></td>
            </tr>
            <tr>
              <td class="profile-item">縮毛矯正履歴</td>
              <td><%= follow.model.straight_history_i18n %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
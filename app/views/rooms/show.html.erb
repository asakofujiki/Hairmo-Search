<div class="container-fluid">
	<div class="row">
		<div class="col-md-offset-1 col-md-10">
			<% @room.all_messages(@room).each do |message| %>
				<% if message.class.name == 'HairdresserMessage' %>
					<div class="message-box">
						<div class="message <%= 'float-right' if message.hairdresser == current_hairdresser %>">
							<%= message.message %>
						</div>
					</div>
				<% elsif message.class.name == 'ModelMessage' %>
					<div class="message-box">
						<div class="message <%= 'float-right' if message.model == current_model %>">
							<%= message.message %>
						</div>
					</div>
				<% end %>
			<% end %>
			<div class="col-md-offset-3 col-md-6 message-form">
				<% if hairdresser_signed_in? %>
					<%= form_with model: @message, url: room_messages_path(@room), local: true do |f| %>
						<%= f.text_area :message, class: "text-area" %>
						<%= f.submit "送信", class: "message-btn" %>
					<% end %>
				<% elsif model_signed_in? %>
					<%= form_with model: @message, url: room_messages_path(@room), local: true do |f| %>
						<%= f.text_area :message, class: "text-area" %>
						<%= f.submit "送信", class: "message-btn" %>
					<% end %>
				<% end %>
			</div>
		</div>
	</div>
</div>
<% @model.favorites.each do |favorite| %>
	<div class="col-md-3">
		<div class="haircatalog">
			<div class="haircatalog-header">
				<% favorite.hair_catalog.catalog_tags.each do |tag| %>
					<span><%= tag.tag_id %></span>
				<% end %>
			</div>
			<div class="haircatalog-image">
				<%= link_to hair_catalog_path(favorite.hair_catalog.id) do %>
					<%= attachment_image_tag(favorite.hair_catalog, :catalog_image, size: '250x250') %>
				<% end %>
			</div>
			<div class="haircatalog-footer">
				<span><%= favorite.hair_catalog.created_at.strftime('%Y/%m/%d') %></span>
				<!-- <span>â™¡1</span> -->
			</div>
		</div>
	</div>
<% end %>
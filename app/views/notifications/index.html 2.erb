<div class="container-fluid">
	<div class="row">
		<div class="col-md-offset-3 col-md-6">
			<% if @notifications.exists? %>
				<% if hairdresser_signed_in? %>
					<% @notifications.each do |notification| %>
						<% visitor = notification.model %>
						<% visited = notification.hairdresser %>
							<div class="notice">
								<strong><%= visitor.hairmodel_name %></strong>
									<% case notification.action %>
										<% when 'follow' then %>
											<p>さんがあなたをフォローしました</p>
										<% when 'favorite' then %>
											<p>さんが</p>
											<p class="content">あなたの投稿</p>
											<p>をいいねしました<p>
										<% when 'message' then %>
											<p>さんから</p>
											<p class="content">メッセージ</p>
											<p>が届きました</p>
									<% end %>
							</div>
					<% end %>
				<% elsif model_signed_in? %>
					<% @notifications.each do |notification| %>
						<% visitor = notification.hairdresser %>
						<% visited = notification.model %>
							<div class="notice">
								<strong><%= visitor.hairdresser_name %></strong>
									<% case notification.action %>
										<% when 'follow' then %>
											<p>さんがあなたをフォローしました</p>
										<% when 'message' then %>
											<p>さんから</p>
											<p class="content">メッセージ</p>
											<p>が届きました</p>
									<% end %>
							</div>
					<% end %>
				<% end %>
			<% else %>
				<div class="notice">通知はありません</div>
			<% end %>
		</div>
	</div>
</div>